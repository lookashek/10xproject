---
/**
 * Layout główny aplikacji
 * 
 * Zawiera podstawową strukturę HTML, meta tagi, style globalne Tailwind + shadcn/ui
 */

import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="10x Cards - Aplikacja do nauki z fiszkami AI" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
